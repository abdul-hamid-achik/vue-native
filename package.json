{
  "name": "vue-native-monorepo",
  "private": true,
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test && bun run test:ios && bun run test:android",
    "test:ts": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint . --fix",
    "knip": "bunx knip",
    "prepare": "bunx lefthook install",
    "test:ios": "xcodebuild test -scheme VueNativeCore -destination 'platform=iOS Simulator,name=iPhone 17,OS=latest' -quiet",
    "test:android": "cd native/android && ./gradlew :VueNativeCore:testDebugUnitTest"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^4.2.0",
    "eslint": "^9.20.0",
    "eslint-plugin-vue": "^10.8.0",
    "globals": "^16.0.0",
    "knip": "^5.85.0",
    "lefthook": "^2.1.1",
    "turbo": "^2.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0",
    "vue-eslint-parser": "^10.1.0"
  }
}
